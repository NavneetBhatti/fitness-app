<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">
            <TextView
                android:id="@+id/workout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Todays Workout"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/main"
                />
            <TextView
                android:id="@+id/workout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum has bejhbhbhjbjhbhbjhbhbjhbjhbhbjhbhbbjhbbjen the industry's standard dummy text ever since the "
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/text_des"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/workout_sets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Sets 1"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_blue"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/workout_reps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Reps 20"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_blue"
                    />
            </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"

        android:background="@color/divider_grey" />

</LinearLayout>